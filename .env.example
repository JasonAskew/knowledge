# Neo4j Knowledge Graph Environment Configuration

# Neo4j Configuration
NEO4J_AUTH=neo4j/knowledge123
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=knowledge123

# Bootstrap Configuration
# Set to 'true' to enable bootstrap on startup
NEO4J_BOOTSTRAP=false

# Path to bootstrap file (relative to container)
NEO4J_BOOTSTRAP_FILE=/data/backups/latest_export.json

# Set to 'true' to force bootstrap even if database has data
NEO4J_BOOTSTRAP_FORCE=false

# AWS Configuration (for discovery agent)
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET=knowledge4westpac

# Logging
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# API Configuration
API_URL=http://localhost:8000